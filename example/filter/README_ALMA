#!/bin/bash

# Band 3 at 2.945mm (M2129, Toft);
awk '{print $1,2.9453505e+07+(NR-64)*(4.0672170e+06)/128,$3}' 1000.fil > 2945.fil

# Band 6 at 1.14mm (M2129, Kohno);
awk '{print $1,1.1398451e+07+(NR-64)*(8.0895686e+05)/128,$3}' 1000.fil > 1140.fil

# Band 6 at 1.191mm (M2129, TM);
awk '{print $1,1.1991825e+07+(NR-64)*(7.3227544e+05)/128,$3}' 1000.fil > 1199.fil

# Band 6 at 1.288mm (M2129, KW);
awk '{print $1,1.2876681e+07+(NR-64)*(1.0951802e+06)/128,$3}' 1000.fil > 1288.fil

# Band 7 (0.8-1.1mm);
awk '{print $1,8000000+(NR-1)*(3000000)/128,$3}' 1000.fil > 1017.fil

